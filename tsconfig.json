{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    "types": [ "jest", "node" ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "jest.config.js"
  ],
  "include": [
    "src/**/*ts",
    "tests/**/*ts"
  ],
}
