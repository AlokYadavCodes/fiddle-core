{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "resolveJsonModule": true,
    "strict": true,
    "types": [ "jest", "node" ]
  },
  "exclude": [
    "node_modules",
    "lib",
    "jest.config.js"
  ],
  "include": ["src/**/*ts", "tests/**/*ts"],
}
